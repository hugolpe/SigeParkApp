<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigeParkApp.VehiclesPage"
             Title="Gestión de Vehículos">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Título -->
            <Label Text="Gestión de Vehículos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <!-- Entry para ingresar placa -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Ingrese la placa del vehículo:" 
                       FontSize="16" />
                <Entry x:Name="txtPlaca"
                       Placeholder="Ingrese placa"
                       TextTransform="Uppercase"
                       TextChanged="txtPlaca_TextChanged"
                       FontSize="18" />
                <Button x:Name="btnValidar"
                        Text="Validar Placa"
                        Clicked="OnValidarClicked"
                        BackgroundColor="#007ACC"
                        TextColor="White" />
            </VerticalStackLayout>
            
            <!-- Label para mostrar resultados de validación -->
            <Label x:Name="lblResultado"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />
            
            <!-- Label para mostrar resumen -->
            <Label x:Name="lblResumen"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
            
            <!-- CollectionView para mostrar vehículos dentro -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Vehículos en el parqueadero:"
                       FontSize="18"
                       FontAttributes="Bold" />
                
                <CollectionView x:Name="listaDentro"
                                MinimumHeightRequest="300">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <Label Text="No hay vehículos dentro"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="14"
                                   TextColor="Gray" />
                        </ContentView>
                    </CollectionView.EmptyView>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10"
                                   Margin="5"
                                   BorderColor="LightGray"
                                   CornerRadius="5"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                                    
                                    <!-- Placa -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="Placa:"
                                           FontAttributes="Bold" />
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Placa}"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    
                                    <!-- Tipo -->
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="Tipo:" />
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Tipo}" />
                                    
                                    <!-- Tiempo transcurrido -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="Tiempo:" />
                                    <Label Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Horas, StringFormat='{0} horas'}" />
                                    <Label Grid.Row="2" Grid.Column="2"
                                           Text="{Binding Minutos, StringFormat='{0} minutos'}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
