<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigeParkApp.VehiclesPage"
             Title="GestiÃ³n de VehÃ­culos">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- TÃ­tulo -->
            <Label Text="GestiÃ³n de VehÃ­culos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <!-- Entry para ingresar placa -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Ingrese la placa del vehÃ­culo:" 
                       FontSize="16" />
                <Entry x:Name="txtPlaca"
                       Placeholder="Ingrese placa"
                       TextTransform="Uppercase"
                       FontSize="18" />
                <Button x:Name="btnValidar"
                        Text="Validar Placa"
                        Clicked="OnValidarClicked"
                        BackgroundColor="#007ACC"
                        TextColor="White" />
            </VerticalStackLayout>
            
            <!-- Label para mostrar resultados de validaciÃ³n -->
            <Label x:Name="lblResultado"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />
            
            <!-- Label para mostrar tipo de vehÃ­culo -->
            <Label x:Name="lblTipo"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />
            
            <!-- Label para mostrar formato de placa -->
            <Label x:Name="lblFormato"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />
            
            <!-- Picker para seleccionar tarifa -->
            <Picker x:Name="pickerTarifa"
                    Title="Seleccione una tarifa"
                    IsVisible="False" />
            
            <!-- BotÃ³n para registrar entrada -->
            <Button x:Name="btnRegistrar"
                    Text="âœ… Registrar Entrada"
                    Clicked="OnRegistrarClicked"
                    BackgroundColor="Green"
                    TextColor="White"
                    IsVisible="False" />
            
            <!-- BotÃ³n para cobrar salida -->
            <Button x:Name="btnCobrarSalida"
                    Text="ðŸ’° Cobrar Salida"
                    Clicked="OnCobrarClicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    IsVisible="False" />
            
            <!-- Label para mostrar resumen -->
            <Label x:Name="lblResumen"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
            
            <!-- Lista de vehÃ­culos dentro usando BindableLayout -->
            <VerticalStackLayout Spacing="10">
                <Label Text="VehÃ­culos en el parqueadero:"
                       FontSize="18"
                       FontAttributes="Bold" />
                
                <!-- Mensaje cuando no hay vehÃ­culos -->
                <Label x:Name="lblEmpty"
                       Text="No hay vehÃ­culos dentro"
                       HorizontalOptions="Center"
                       FontSize="14"
                       TextColor="Gray"
                       IsVisible="False" />
                
                <!-- BindableLayout funciona correctamente dentro de ScrollView -->
                <VerticalStackLayout x:Name="listaDentro"
                                     Spacing="5">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10"
                                   Margin="5"
                                   BorderColor="LightGray"
                                   CornerRadius="5"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                                    <!-- Placa -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="Placa:"
                                           FontAttributes="Bold" />
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Placa}"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <!-- Tipo -->
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="Tipo:" />
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Tipo}" />
                                    <!-- Tiempo transcurrido -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="Tiempo:" />
                                    <Label Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Horas, StringFormat='{0} horas'}" />
                                    <Label Grid.Row="2" Grid.Column="2"
                                           Text="{Binding Minutos, StringFormat='{0} minutos'}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
