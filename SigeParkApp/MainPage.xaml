<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigeParkApp.MainPage"
             Title="Inicio de sesión">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label
                Text="Bienvenido al Sistema&#10;Gestor de Parqueaderos Móvil Sigepark"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Bienvenido al Sistema de Gestión de Parqueaderos Sigepark" />
        <Image
                Source="dotnet_bot.png"
                HeightRequest="150"
                Aspect="AspectFit"
                SemanticProperties.Description="Logo de Sigepark" />
        <Label Text="Usuario" FontSize="18"/>
        <Entry x:Name="txtEmail" Placeholder="Ingrese su usuario"/>

        <Label Text="Contraseña" FontSize="18"/>
        <Entry x:Name="txtPassword" Placeholder="Ingrese su contraseña" IsPassword="True"/>

        <Button Text="Iniciar sesión" Clicked="OnLoginClicked"/>
        <Label x:Name="lblResultado" TextColor="Red"/>

        <!--<Button Text="Vista previa del ticket" Clicked="OnTicketPreviewClicked" />-->
    </VerticalStackLayout>
</ContentPage>
